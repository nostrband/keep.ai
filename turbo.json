{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "public/**", "build/**"],
      "env": ["BUILD_GMAIL_SECRET"]
    },
    "build:serverless": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "public/**", "build/**"],
      "env": ["BUILD_GMAIL_SECRET"]
    },
    "build:electron": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "public/**", "build/**"],
      "env": ["BUILD_GMAIL_SECRET"]
    },
    "build:frontend": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "public/**", "build/**"],
      "env": ["BUILD_GMAIL_SECRET"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
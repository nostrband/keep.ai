{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": [],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    // "incremental": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@app/proto/*": ["packages/proto/src/*"],
      "@app/agent/*": ["packages/agent/src/*"],
      "@app/db/*": ["packages/db/src/*"],
      "@app/sync/*": ["packages/sync/src/*"],
      "@app/node/*": ["packages/node/src/*"],
      "@app/ui/*": ["packages/ui/src/*"],
      "@app/cli/*": ["apps/cli/src/*"],
      "@app/web/*": ["apps/web/src/*"],
      "@app/server/*": ["apps/server/src/*"],
      "@app/user-server/*": ["apps/user-server/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
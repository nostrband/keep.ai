{
  "name": "@app/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.cjs",
  "exports": {
    ".": {
      "require": "./dist/server.cjs",
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/server.ts src/start.ts --format esm,cjs --out-dir dist",
    "postbuild": "mkdir -p public; cp -r ../web/dist/frontend/* ./public",
    "dev": "tsx src/start.ts",
    "start": "node dist/start.cjs",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@app/agent": "file:../../packages/agent",
    "@app/db": "file:../../packages/db",
    "@app/node": "file:../../packages/node",
    "@app/sync": "file:../../packages/sync",
    "@fastify/static": "^8.3.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "fastify": "^5.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.0",
    "typescript": "^5.2.0"
  }
}

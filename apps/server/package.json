    "@app/node": "file:../../packages/node",
    "@app/sync": "file:../../packages/sync",
    "@fastify/static": "^8.3.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "fastify": "^5.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.0",
    "typescript": "^5.2.0"
  }
}
